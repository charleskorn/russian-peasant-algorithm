{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "consistent-return": ["error"],
    "eqeqeq": ["error", "always"],
    "no-duplicate-imports": ["error"],
    "no-var": ["error"],
    "prefer-const": ["error"],
    "prefer-arrow-callback": ["error"]
  }
}
